<?xml version='1.0' encoding='ISO-8859-1'?>

<!DOCTYPE swatch SYSTEM "swatch.dtd">

<swatch             name="SAMPLE_NODE_CUR_REF">

<!-- Base -->
	<sat	        shape="diskShp"
					transfo="baseTrf"
					hover="hoverEvt"
					click="clickEvt"
					dblClk="dblClkEvt">
		<slice		inCol="255 255 0"
					outCol="255 255 127"/>
		<slice		inCol="255 255 255">
			<transfo scale=".87"/>
		</slice>
	</sat>

<!-- Rest Spots -->
	<sat	        shape="diskShp"
					isSub="true">
		<slice		inCol="255 223 0"
					outCol="223 191 0"
					transfo="spotTrf"/>
		<slice		image="{s$web_context}/images/{sID}.gif"
					transfo="imgTrf" />
	</sat>

<!-- Cur Spot -->
	<sat	        shape="diskShp"
					isSub="true"
					isRest="false"
					isCur="true">
		<slice		inCol="255 255 95"
					outCol="223 191 0"
					transfo="spotTrf"/>
		<slice		image="{s$web_context}/images/{sID}.gif"
					transfo="imgTrf" />
	</sat>

<!-- Rest Titles -->
	<sat	        shape="voidShp"
					click="clickEvt"
					dblClk="dblClkEvt"
					isTip="true"
					isSub="true">
		<transfo    map="interpol">
			<polar  dir="0" rad="1.3"/>
		</transfo>
		<slice>
			<tip 	font="nameFnt"
					label="@nameStr"
					textCol="0 0 0"
					isCorner="true"/>
		</slice>
	</sat>

<!-- General purpose Selection -->
<!-- Sel sats must be declared before the ones they should hides when they'll be activated -->
	<sat	        shape="voidShp"
					isSub="true"
					selection="search">
		<transfo    map="interpol">
			<polar  dir="0" rad="1.2"/>
		</transfo>
		<slice>
			<tip 	font="selFnt"
					label="{sNAME}"
					inCol="255 0 0"
					textCol="@whiteCol"
					isCorner="true"/>
		</slice>
	</sat>
	
<!-- Cur Title -->
	<sat	        shape="voidShp"
					click="clickEvt"
					dblClk="dblClkEvt"
					isSub="true"
					isRest="false"
					isCur="true">
		<transfo    map="interpol">
			<polar  dir="0" rad="1.2"/>
		</transfo>
		<slice>
			<tip 	font="nameFnt"
					label="@nameStr"
					inCol="255 191 31"
					textCol="@whiteCol"
					isCorner="true"/>
		</slice>
	</sat>
<!-- References -->
	<string         id="nameStr"        label="{sNAME}"/>

	<color 		    id="blackCol"		rgb="000000"/>
	<color 		    id="whiteCol"		rgb="ffffff"/>
	<color 		    id="hLinkDrkCol"	rgb="0 0 127"/>
	<color 		    id="hLinkCol"		rgb="0 0 255"/>
	<color 		    id="hLinkLitCol"	rgb="191 191 255"/>

	<shape		    id="voidShp"/>
	<shape		    id="diskShp"
					scale="1">
	</shape>
	<shape		    id="spotShp"
					scale="0.2">
	</shape>

	<font		    id="nameFnt"
					name="SansSerif"
					size="12"
					style="bold"/>
	<font		    id="italicFnt"
					name="SansSerif"
					size="12"
					style="italic"/>
	<font		    id="selFnt"
					name="SansSerif"
					size="12"
					style="bold" />

	<transfo        id="spotTrf"
					scale="0.2"/>
	<transfo        id="imgTrf"
					scale="0.4"/>
	<transfo	    id="baseTrf"
					map="interpol">
		<polar      dir="90"
					rad="1"/>
	</transfo>
	<transfo        id="selTrf"
					map="interpol">
		<polar      dir="0"
					rad="1.4"/>
	</transfo>

	<tip 	    	id="textTip"
					font="nameFnt"
					label="@nameStr"
					textCol="@blackCol"
					isCorner="true"/>


	<!-- Hover event -->
	<event 	        id="hoverEvt">
		<show       status="Cliquez pour afficher le menu de '{sNAME}'. Double-cliquez pour afficher sa fiche."/>
	</event>

	<!-- Click event -->
	<event 	        id="clickEvt">
		<popup      menu="menu"/>
	</event>

		<menu		    id="menu"
						font="menuFnt">
			<item 		label="{+sNAME}"
						font="nameFnt"
						url="javascript:Discover({sID},{sNAME})" />
			<separator />
			<item 		label="[+80sPOSS_NAME]"
						url="javascript:NewWin([sPOSS_ID],[sPOSS_NAME])"/>
		</menu>

		<font		    id="menuFnt"
						name="Monospaced"
						size="11"/>

	<!-- DblClkEvt event -->
	<event 	        id="dblClkEvt">
		<open       url="javascript:alert({sNAME})" />
	</event>

</swatch>

